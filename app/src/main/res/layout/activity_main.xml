<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/weather_bg">

    <TextView
        android:id="@+id/textView_country"
        android:layout_width="177dp"
        android:layout_height="42dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="103dp"
        android:layout_marginLeft="104dp"
        android:layout_marginRight="103dp"
        android:layout_marginStart="104dp"
        android:text="Loading"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_lonandlat" />

    <TextView
        android:id="@+id/textView_temperature"
        android:layout_width="121dp"
        android:layout_height="32dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="28dp"
        android:text="Loading"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView_country" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="68dp"
        android:layout_height="59dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="153dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="153dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_main"
        app:layout_constraintEnd_toStartOf="@+id/textView_temperature"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_country"
        app:srcCompat="@drawable/ic_cloud_queue_black_24dp"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/textView_main"
        android:layout_width="132dp"
        android:layout_height="30dp"
        android:layout_marginBottom="288dp"
        android:layout_marginEnd="126dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="126dp"
        android:layout_marginStart="120dp"
        android:text="Loading"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView_lonandlat"
        android:layout_width="156dp"
        android:layout_height="29dp"
        android:layout_marginEnd="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginStart="120dp"
        android:text="Loading"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_country"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_pressure"
        android:layout_width="75dp"
        android:layout_height="31dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="293dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="293dp"
        android:layout_marginTop="223dp"
        android:text="Loading"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_speed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_temperature" />

    <TextView
        android:id="@+id/textView_speed"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="293dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="293dp"
        android:text="Loading"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_pressure" />

</android.support.constraint.ConstraintLayout>